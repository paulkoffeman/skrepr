{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Telefoonnummer</th>
                <td>{{ contact.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
